<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.basicLevel.BasicFragment">


        <TextView
            android:id="@+id/instructionTxt"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="Continue to
                      french with
          basic course"
            android:textColor="#0B4CEF"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:adjustViewBounds="true"
            android:src="@drawable/flogo"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toEndOf="@id/instructionTxt"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgAlphabets"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@id/instructionTxt"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/blueimages"
            />

        <Button
            android:id="@+id/btnAlphabets"
            android:layout_width="290dp"
            android:layout_height="67dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="40dp"
            android:background="#0B4CEF"
            android:text="Alphabets"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/imgAlphabets"
            app:layout_constraintTop_toBottomOf="@id/instructionTxt" />

        <ImageView
            android:id="@+id/imgNumbers"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@id/imgAlphabets"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/blueimages"
            />

        <Button
            android:id="@+id/btnNumbers"
            android:layout_width="290dp"
            android:layout_height="67dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="40dp"
            android:background="#0B4CEF"
            android:text="Numbers"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/imgNumbers"
            app:layout_constraintTop_toBottomOf="@id/btnAlphabets" />

        <ImageView
            android:id="@+id/imgDaysofweek"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@id/imgNumbers"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/blueimages"
            />

        <Button
            android:id="@+id/btnDaysofWeek"
            android:layout_width="290dp"
            android:layout_height="67dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="40dp"
            android:background="#0B4CEF"
            android:text="Days of week"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/imgDaysofweek"
            app:layout_constraintTop_toBottomOf="@id/btnNumbers" />
        <ImageView
            android:id="@+id/imgMonthsName"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@id/imgDaysofweek"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/blueimages"
            />

        <Button
            android:id="@+id/btnMonthsName"
            android:layout_width="290dp"
            android:layout_height="67dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="40dp"
            android:background="#0B4CEF"
            android:text="Months Name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/imgMonthsName"
            app:layout_constraintTop_toBottomOf="@id/btnDaysofWeek" />

        <Button
            android:id="@+id/button"
            android:layout_width="178dp"
            android:layout_height="67dp"
            android:text="Quiz"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.738"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnMonthsName"
            app:layout_constraintVertical_bias="0.474" />

</androidx.constraintlayout.widget.ConstraintLayout>
